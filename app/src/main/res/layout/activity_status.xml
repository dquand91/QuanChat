<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="luongduongquan.com.quanchat.Activities.StatusActivity">

    <include layout="@layout/app_bar_layout"
             android:id="@+id/appBar_status">
    </include>

    <EditText
        android:id="@+id/edtChangeStatus_Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBar_status"
        android:layout_marginTop="30dp"
        android:hint="Input status here..."
        android:maxLines="5"
        android:padding="20dp"
        android:singleLine="false"/>

    <Button
        android:id="@+id/btnSaveChange_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtChangeStatus_Status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Save Changes"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"/>

</RelativeLayout>
