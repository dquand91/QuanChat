<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage_itemRequestFriend"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/user"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/userName_itemRequestFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="User Name"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/userStatus_itemRequestFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnAccept_itemRequestFriend"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@android:color/holo_green_dark"
                android:text="Accept"
                android:textStyle="bold"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnCancel_itemRequestFriend"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@android:color/holo_red_dark"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/btnAccept_itemRequestFriend"/>

        </RelativeLayout>

    </LinearLayout>





</LinearLayout>